<?xml version="1.0" encoding="utf-8" ?>
<gameshop>
	<start>
		<optionlist>
			<option1> == Start Menu == </option1>
			<option2>Login</option2>
			<option2>Register</option2>
			<option3>Change language</option3>
			<option4>Exit</option4>
		</optionlist>
		<infolist>
			<info1>Welcome in GameShop!</info1>
			<info2>Choose one of the options to continue.</info2>
		</infolist>
	</start>
	<login>
		<optionlist>
			<option1> == Login == </option1>
			<option2>Nickname:</option2>
			<option3>Password:</option3>
			<option4>View password</option4>
			<option5>Login</option5>
			<option6>Back</option6>
		</optionlist>
		<infolist>
			<info1>Complete all fields to log in!</info1>
		</infolist>
	</login>
	<register>
		<optionlist>
			<option1> == Register == </option1>
			<option2>Nickname:</option2>
			<option3>Password:</option3>
			<option4>Repeat password:</option4>
			<option5>View passwords</option5>
			<option6>Register</option6>
			<option7>Back</option7>
		</optionlist>
		<infolist>
			<info1>Fill in all the fields to register!</info1>
			<info2>Requirements:</info2>
			<info3>- The password must be at least 8 characters long, one digit, one uppercase letter, and one special character!</info3>
		</infolist>
	</register>
	<language>
		<optionlist>
			<option1> == Language == </option1>
			<option2>Polski</option2>
			<option3>English</option3>
			<option4>Back</option4>
		</optionlist>
		<infolist>
			<info1>Choose one of the available option to change language.</info1>
		</infolist>
	</language>
	<outro>
		<infolist>
			<info1>Thank you for using our services!</info1>
			<info2>GameShop - 2025</info2>
		</infolist>
	</outro>
	<error>
		<infolist>
			<info1>That view does not exist!</info1>
			<info2>Unable to connect to the database!</info2>
			<info3>That file does not exist!</info3>
			<info4>Try again later or download gameshop again!</info4>
			<info5>Press Enter to exit.</info5>
		</infolist>
	</error>
	<validation>
		<infolist>
			<info1>Not all fields have been completed!</info1>
			<info2>Passwords are not the same!</info2>
			<info3>Password does not fit the requiremensts!</info3>
			<info4>Account already exist!</info4>
			<info5>Account does not exist or data are incorrect!</info5>
		</infolist>
	</validation>
	<succesfulregistration>
		<infolist>
			<info1>Your registration is complete!</info1>
			<info2>Welcome To gameshop!</info2>
			<info3>Press Enter to continue!</info3>
		</infolist>
	</succesfulregistration>
	<succesfulLogin>
		<infolist>
			<info1>Welcome back</info1>
		</infolist>
	</succesfulLogin>
	<adminmainmenu>
		<optionlist>
			<option1> == Main menu == </option1>
			<option2>Look books</option2>
			<option3>Add book</option3>
			<option4>User list</option4>
			<option5>Logout</option5>
			<option6>Exit</option6>
		</optionlist>
		<infolist>
			<info1>Welcome</info1>
		</infolist>
	</adminmainmenu>
</gameshop>
